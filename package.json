{
  "name": "js-player-module-brightcove",
  "version": "1.3.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm install && npm run develop",
    "develop": "npm-run-all -p build:babel server",
    "production": "npm-run-all -s build:babel:production minify",
    "build:babel": "babel src --watch --out-dir dist --presets env --ignoreBrowserslistConfig true",
    "build:babel:production": "babel src --out-dir dist --presets env",
    "minify": "uglifyjs --mangle --comments --output dist/js-player-module-brightcove.min.js -- dist/js-player-module-brightcove.js",
    "server": "browser-sync start --server ./ --directory ./sample --files **/*.css **/*.js **/*.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yama-dev/js-player-module-brightcove"
  },
  "author": "yama-dev",
  "license": "MIT",
  "browserslist": "last 2 versions, ie 8",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.6",
    "npm-run-all": "^4.1.2",
    "uglify-js": "^3.3.14"
  }
}
